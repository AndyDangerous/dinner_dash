%h3 You're checking out!

=@address.street_1
=@address.street_2
=@address.city
=@address.state
=@address.zip
%br

.container
  = form_for @order do |f|
    =radio_button_tag "delivery", order.delivery
    =label_tag(:order_pickup, "Pickup")
    =radio_button_tag("delivery", order.delivery)
    =label_tag(:order_delivery, "Delivery")
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse_address"}
            Submit a New Address
      .panel-collapse.collapse{:id => "collapse_address"}
        .panel-body
          = form_for @address do |f|
            .form-group
              = f.text_field :street_1, class: "form-control", placeholder: "Street"
              %br/
              = f.text_field :street_2, class: "form-control", placeholder: "Street"
              %br/
              = f.text_field :city, class: "form-control", placeholder: "City"
              %br/
              = f.text_field :state, class: "form-control", placeholder: "State"
              %br/
              = f.text_field :zip, class: "form-control", placeholder: "Zipcode"
              %br/
              = f.hidden_field :order_id, value: order.id
              %br/
              = f.submit "Save Address", class: "btn btn-large btn-block btn-primary", href: "address_path(@address)", method: 'PATCH'
  =form_for @order do |f|
    =radio_button_tag(:order, "pay_in_store")
    =label_tag(:order_pickup, "Pay in Store")
    =radio_button_tag(:order, "pay_online")
    =label_tag(:order_delivery, "Pay Online")
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse_payment"}
            Submit Payment Information
      .panel-collapse.collapse{:id => "collapse_payment"}
        .panel-body
          = form_for order do |f|
            .form-group
              = f.text_field :ccn, class: "form-control", placeholder: "Credit Card Number"
              %br/
              = f.text_field :expdate, class: "form-control", placeholder: "Expiration Date"
              %br/
              = f.text_field :card_name, class: "form-control", placeholder: "Name on Card"
              %br/
              = f.submit "Enter Payment Info", class: "btn btn-large btn-block btn-primary", href: "order_path", method: 'PATCH'
  = link_to 'Continue to Confirmation Screen', confirm_path
