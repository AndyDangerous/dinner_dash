%ul
  -@items.each do |item|
    %h4= item.title
    %li Categories:
    -item.categories.each do |category|
      %li= category.name
    %li= "Description: #{item.description}"
    %li= "Price: #{item.price}  "
    %li= link_to "View Item", admin_item_path(item)
    %li= link_to "Edit Item", edit_admin_item_path(item)
    %li= link_to "Delete Item", admin_item_path(item), method: :delete
    %br
