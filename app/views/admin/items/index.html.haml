.container
  %table.table.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Price
        %th
        %th
        %th
    %tbody
      -@items.each do |item|
        %tr
          %td= item.title
          %td= item.description
          %td= item.price
          %td= link_to "View Item", admin_item_path(item)
          %td= link_to "Edit Item", edit_admin_item_path(item)
          %td= link_to "Delete Item", admin_item_path(item), method: :delete

