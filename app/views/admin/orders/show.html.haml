.container
  .order-header
    %h2= "Order: #{@user_order.id}"
    .order-info-table-div
      %table.table.table-striped.order-info-table
        %thead
          %tr
            %th Created
            %th Name
            %th Email
            %th Status
        %tbody
          %tr
            %th= @user_order.created_at
            %th= "#{@user_order.user.first_name.capitalize} #{@user_order.user.last_name.capitalize}"
            %th= @user_order.user.email
            %th= @user_order.aasm_state.capitalize
    %table.table.table-striped
      %thead
        %tr
          %th Title
          %th Description
          %th Price
          %th Quantity
          %th
          %th Subtotal
      %tbody
        -@user_order.order_items.each do |order_item|
          %tr
            %td= link_to order_item.item.title, item_path(order_item.item)
            %td= order_item.item.description
            %td= order_item.item.price
            %td
              = form_for 'item', method: 'PUT', :url => {:controller => 'order_items', action: :update, id: order_item(item) } do |f|
                .field
                  = f.number_field :quantity, :value => order_item(item).quantity
                  = submit_tag "Update", class: "btn btn-primary"
            %td= button_to "Remove", delete_item_order_path(order, item_id: item.id), class: "btn btn-danger"
            %td= "$#{(order_item.quantity * order_item.item.price)}.00"
    %h4.pull-right
      ="Total: $#{order.total}.00"
