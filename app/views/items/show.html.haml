.thumbnail
  %img{:alt => "...", "data-src" => "holder.js/300x300"}
    .caption
      %h3=@item.title
      %p= image_tag @item.image.url, size: "50x50"
      %p=@item.description
      %p $ #{@item.price.to_i}
      -unless @item.extinct?
        = button_to "Add to Cart", add_item_order_path(order, item_id: @item.id), class: "btn btn-primary"
